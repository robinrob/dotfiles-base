local -r GrepExpression=$1
local -r FindExpression=$2
[[ -n $3 ]] && local -r Depth="\-maxdepth $3"


IFS="
"

args=". $Depth -follow -name $FindExpression -type f"

result=($(print $args | xargs gfind))

for file in $result
do
  grep=$(grep $GrepExpression $file)
  if [[ -n $grep ]]
  then
    yellow $file
    IFS=" "
    print $grep | grep $GrepExpression
  fi
done
