local +r Usage='grep_all <grep-expression> <find-expression> -w <where> -d <depth> -e <excludes>'

( [[ -z $1 ]] || [[ -z $2 ]] ) && red $Usage && return 1


local +r GrepExpression=$1;
local +r FindExpression=$2; shift 2
local +r Where='.'
local +r MaxDepth

while getopts :w:d:e: opt
do
	case $opt in
    w) Where="$OPTARG" ;;
    d) MaxDepth="-maxdepth $OPTARG" ;;
    e) local +r -a ExcludesList
				ExcludesList=(${=OPTARG})
				for exclude in $ExcludesList
				do
					Excludes="$Excludes ! -name $exclude"
				done ;;
    *) red $Usage && return 1 ;;
	esac
done

IFS=" 
"
for file in $(gfind $Where ${=MaxDepth} -follow ${=Excludes} -name "$FindExpression" -type f)
do
  local +r Result
  Result=$(ggrep -i $GrepExpression $file)
  if [[ -n $Result ]]
  then
    yellow $file
    print $Result | ggrep -i $GrepExpression
  fi
done
