local -r GrepExpression=$1
local -r FindExpression=$2
[[ -n $3 ]] && local -r Depth="-maxdepth $3"


local +r args=". $Depth -follow -name $FindExpression -type f"

local +r result=($(print $args | xargs gfind))

for file in $result
do
  grep=$(grep -i $GrepExpression $file)
  if [[ -n $grep ]]
  then
    yellow $file
    print $grep | grep -i $GrepExpression
  fi
done
