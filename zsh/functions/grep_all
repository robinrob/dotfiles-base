local -r GrepExpression=$1
local -r FindExpression=$2
[[ -n $3 ]] && local -r Depth="-maxdepth $3"


local +r args=". $Depth -follow -name $FindExpression -type f -print0"

local +r -a result
result=($(print $args | xargs gfind | xargs -0))

for file in $result
do
  red $file
  grep=$(grep -i $GrepExpression $file)
  if [[ -n $grep ]]
  then
    yellow $file
    print $grep | grep -i $GrepExpression
  fi
done
