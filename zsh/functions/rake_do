TASK=$1


base_cmd='rake --rakefile $RAKEFILE --libdir $RAKELIB'

if [ -f $RAKEFILE ]
then
  print "$(green "Using Rakefile: ")$(yellow)$RAKEFILE"

  shift

  if [[ -n $* ]]
  then
    cmd="$base_cmd $TASK['$(join ', ' $*)']"
	else
		cmd="$base_cmd $TASK"
	fi

  eval $cmd
  green $cmd
else
	red "No Rakefile!"
fi

