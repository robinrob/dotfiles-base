TASK=$1
shift

BASE_CMD='rake -g'

rvm use 2.1.4 && rvm gemset use rakelib

if [ -f $RAKEFILE ]
then
  print "$(green "Using Rakefile: ")$(yellow)$RAKEFILE"

  if [[ -n $* ]]
  then
    cmd="$BASE_CMD $TASK"[\'$(join ', ' $*)\']
	else
		cmd="$BASE_CMD $TASK"
	fi

  eval $cmd
  green $cmd
else
	red "No Rakefile!"
fi

