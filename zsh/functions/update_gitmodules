typeset -U files

cd $PROG_HOME

for file in $(gfind . -name .gitmodules | xargs)
do
  files=($file $files)
done

for file in $files
do
  green $file
  cd $(dirname $file)
  yellow git add
  git add .gitmodules
  yellow git commit
  git commit -am '.gitmodules update'
  yellow git pull
  git pull $DEFAULT_GIT_REMOTE master
  yellow git push
  git push $DEFAULT_GIT_REMOTE master
done
