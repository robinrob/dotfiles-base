NAME=$1
VALUE=$2
ALIAS_FILE=$3
SUCCESS_MSG=$4

while getopts :o: name
do
  case $name in
    o) OVERRIDE=$OPTARG ;;
    *) usage ;;
  esac
done

if [[ "$(alias_exists $NAME $ALIAS_FILE)" == "no" ]]
then
	print "
alias $NAME=\"$VALUE\"" >> $ALIAS_FILE
  print "$(yellow)$NAME $(green)aliased to $(yellow)$VALUE"
fi
