local success=$FALSE

for bookmark in $*
do
  if [[ -n $(bookmark_exists $bookmark) ]]
  then
    delete_alias $bookmark > /dev/null

    for bookmark_file in $bookmarks
    do
      gsed -i '/^'$bookmark'::/d' $bookmark_file
    done

    print "$(red)Bookmark $(yellow)$bookmark $(red)unbookmarked$(default)"
    success=$TRUE
  else
    print "$(maganda)Bookmark $(yellow)$bookmark $(maganda)does not exist$(default)"
  fi
done

if [[ $success == $TRUE ]]
then
  generate_all_bookmarks > /dev/null
  green "Bookmarks updated."
else
  yellow "No bookmarks changed."
fi
