local +r Pattern
local +r Where='.'
local +r MaxDepth


while getopts :f:w:d: name
do
	case $name in
		f) Pattern="$OPTARG" ;;
    w) Where="$OPTARG" ;;
    d) MaxDepth="-maxdepth $OPTARG" ;;
    *) red "find -f <pattern> -w <location> -d <depth>" ;;
	esac
done

cmd="gfind $Where $MaxDepth -iname '*$Pattern*'"
green $cmd
eval $cmd
