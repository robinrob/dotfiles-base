local +r Record=$1
shift; local -a Files; Files=($*)

for file in $Files
do
  # row=$(ggrep -Po "(?<=^($Record)::)(.+)" $file)
  # row=$(ggrep -Po1 "$Record::(.+)" $file)

  # row=$(pcregrep -o1 -M -N CR "$Record::((^(::))+)\n" $file)
  row=$(pcregrep -o1 -M -N CR "$Record::^((?!::).)+" $file)
  row=(${(s/::/)row})
  val=$row[-1]

  [[ $(is_empty $val) == "no" ]] && break
done

if [[ $(is_empty $val) == "no" ]]
then
  copy_print ""$val""
fi
