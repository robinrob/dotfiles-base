local +r From
local +r To

while getopts :f:t: name
do
	case $name in
		f) From="$OPTARG" ;;
		t) To="$OPTARG" ;;
	esac
done

if [[ "$From" == "" ]]
then
	From="tl"
else
	shift; shift;
fi

if [[ "$To" == "" ]]
then
	To="en"
else
	shift; shift;
fi

browser "https://translate.google.com/#$From/$To/$(urlencode ""$*"")"

