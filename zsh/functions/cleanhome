if [[ -n $1 ]]
then
  local -r SearchRoot=$1
else
  local -r SearchRoot=$HOME
fi

# Fuck off!
[[ $SearchRoot == "/" ]] && red "No fucking way!" && return 1

cd $SearchRoot || return 1

IFS="
"

local Result
Result=($(gfind . -maxdepth 1 -regex '.*/[a-z0-9].*'))


for file in $Result
do
  print "$(green Moving) $(yellow $file) $(green to $TRASH_HOME)"
  mv $file ~/.Trash
done

cd - > /dev/null
