trap max_brightness INT
STOP='FALSE'

function max_brightness {
  STOP='TRUE'

  trap INT
}

while getopts :s:m:h: opt
do
  case $opt in
    s) local +r Duration=$OPTARG ;;
    m) local +r Duration=$(( OPTARG * 60 )) ;;
    h) local +r Duration=$(( OPTARG * 3600 )) ;;
  esac
done

if [[ -z $Duration ]]
then
  local +r Minutes=$*[-1]
  local +r Duration=$(( Minutes * 60 ))
fi

sleep $Duration

function timer_finished_alert {
  print "TIMER FINISHED"

  if [[ $STOP == 'FALSE' ]]
  then
    if (( $PHASE == 0 ))
    then
      say "bull"
      brightness 0
      PHASE=1
    else
      say "dog"
      brightness 1
      PHASE=0
    fi
  fi
}

osascript -e 'set volume output volume 100'
local PHASE=0
while [[ $STOP == 'FALSE' ]]
do
  timer_finished_alert
  sleep 0.1
done

brightness 1
