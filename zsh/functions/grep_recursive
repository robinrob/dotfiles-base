local +r Usage='grep_recursive -g <regex> -w <location> -d <depth> -i (case-insensitive grep)'

[[ -z $1 ]] && red $Usage && return 1


local +r GrepExpression=$1; shift
local +r Where='.'
local +r MaxDepth
local +r Insensitive
local +r Excludes

while getopts :w:d:e:i opt
do
	case $opt in
    w) Where="$OPTARG" ;;
    d) MaxDepth="-maxdepth $OPTARG" ;;
    i) Insensitive="--ignore-case" ;;
    e)
      local +r -a ExcludesList
      ExcludesList=(${=OPTARG})
      for exclude in $ExcludesList
      do
        Excludes="$Excludes ! -name $exclude"
      done
      ;;
    *) red $Usage && return 1 ;;
	esac
done

gfind $Where ${=MaxDepth} -type f ${=Excludes} -exec egrep -H $Insensitive $GrepExpression {} \;
