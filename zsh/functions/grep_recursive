local +r GrepExpression
local +r Where='.'
local +r MaxDepth
local +r Insensitive


while getopts :g:w:d:i opt
do
	case $opt in
		g) GrepExpression="$OPTARG" ;;
    w) Where="$OPTARG" ;;
    d) MaxDepth="-maxdepth $OPTARG" ;;
    i) Insensitive="--ignore-case" ;;
    *) red "grep_recursive -g <regex> -w <location> -d <depth> -i" ;;
	esac
done


gfind $Where $MaxDepth -type f -exec egrep -H $Insensitive $GrepExpression {} \;
