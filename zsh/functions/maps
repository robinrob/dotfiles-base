local +r Search
local +r Near

print $@

while getopts :n: opt
do
  case $opt in
    n) Near="$OPTARG"; shift 2;;
  esac
done

case $# in
  0)
    Search="$POSTCODE" ;;
  *)
    Search="$*"
esac

print "Near: ${Near}"

if [[ -n $Near ]]
then
  Search="$Search near $(postcode)"
fi


print $Url

browser "https://www.google.co.uk/maps/search/$(urlencode $Search)"
