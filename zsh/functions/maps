local +r Search
local +r Near

while getopts :n: opt
do
  case $opt in
    n) Near="$OPTARG"; shift 2;;
  esac
done

case $# in
  0)
    Search="$(get_postcode)" ;;
  *)
    Search="$*"
esac

if [[ -n $Near ]]
then
  Search="$Search near $(get_postcode)"
fi

browser "https://www.google.co.uk/maps/search/$(urlencode $Search)"
