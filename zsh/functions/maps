local +r Search
local +r Near

while getopts :n opt
do
  case $opt in
    (n) Near=true; shift;
  esac
done

case $# in
  0)
    Search="$POSTCODE" ;;
  *)
    Search="$@"
esac

if $Near
then
  Search="$Search near $(postcode)"
fi


browser "https://www.google.co.uk/maps/search/$(urlencode $Search)"
