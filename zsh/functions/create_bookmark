local -r BookmarksPath=$1
local -r Name=$2
local -r  Url=$3
if [[ -n $4 ]]
then
  local +r Browser=$4
else
  local -r Browser='browser'
fi


if [[ -z $(bookmark_exists $Name) ]]
then
  print "$Name::$Browser::$Url" >> $BookmarksPath

  generate_all_bookmarks > /dev/null

  print -z $Name

  print "$(yellow $Name) $(green bookmarked as) $(yellow $Url) $(green with browser) $(yellow $Browser)"
else
  print "$(red Bookmark) $(yellow $Name) $(red exists)"
fi
