local +r RawOutput=""

while getopts :r opt
do
  case $opt in
    r) local +r RawOutput=$TRUE; shift; break
  esac
done

local +r Files=($*)

IFS="
"
local +r -U Ignores=($(cat $SPELLCHECK_IGNORES))

for file in $Files
do
  if ! [[ $RawOutput ]]
  then
    print "$(green Mis-spelledwords in:) $(yellow $file)"
  fi

  for word in $(spellcheck_list $file)
  do
    if ! $(is_in_set $Ignores $word)
    then
      if [[ $RawOutput ]]
      then
        print $word
      else
        red $word
      fi
    fi
  done
done

